<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 虫眼鏡アイコン（検索用） -->
    <Geometry x:Key="SearchIconGeometry">
        M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z
    </Geometry>

    <!-- 検索アイコンのスタイル（デフォルト） -->
    <Style x:Key="SearchIconStyle" TargetType="Path">
        <Setter Property="Data" Value="{StaticResource SearchIconGeometry}"/>
        <Setter Property="Fill" Value="Gray"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- テーマ対応検索アイコンのスタイル -->
    <Style x:Key="ThemedSearchIconStyle" TargetType="Path">
        <Setter Property="Data" Value="{StaticResource SearchIconGeometry}"/>
        <Setter Property="Fill" Value="{DynamicResource TextForeground}"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="0.6"/>
    </Style>

    <!-- 小さいサイズの検索アイコン -->
    <Style x:Key="SmallSearchIconStyle" TargetType="Path" BasedOn="{StaticResource ThemedSearchIconStyle}">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
    </Style>

    <!-- 大きいサイズの検索アイコン -->
    <Style x:Key="LargeSearchIconStyle" TargetType="Path" BasedOn="{StaticResource ThemedSearchIconStyle}">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <!-- UserControl内での使用に最適化された検索アイコン -->
    <Style x:Key="SearchTextBoxIconStyle" TargetType="Path" BasedOn="{StaticResource ThemedSearchIconStyle}">
        <Setter Property="Margin" Value="8,0,4,0"/>
    </Style>

</ResourceDictionary>