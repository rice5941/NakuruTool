<UserControl x:Class="NakuruTool.Views.Collection.CollectionListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:NakuruTool.ViewModels"
             xmlns:vmc="clr-namespace:NakuruTool.ViewModels.Collection"
             xmlns:controls="clr-namespace:NakuruTool.Views.Controls"
             xmlns:collection="clr-namespace:NakuruTool.Views.Collection"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 所持コレクション -->
        <GroupBox Grid.Column="0" Header="{Binding OwnedCollectionsHeader}" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- コレクション検索 -->
                <controls:SearchTextBox Grid.Row="0" 
                                       Margin="5"
                                       SearchText="{Binding CollectionFilterText, UpdateSourceTrigger=PropertyChanged}"
                                       PlaceholderText="{DynamicResource SearchCollectionsPlaceholder}"/>
                
                <!-- コレクションリスト -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding FilteredCollections}" 
                         SelectedItem="{Binding SelectedCollection}"
                         Margin="5,0,5,5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Foreground="Gray" FontSize="10">
                                    <Run Text="{Binding BeatmapCount, Mode=OneWay}"/>
                                    <Run Text=" "/>
                                    <Run Text="{DynamicResource SongCount}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- 所持コレクション操作ボタン -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="{DynamicResource LoadCollections}" 
                            Command="{Binding OperationPanelViewModel.LoadCollectionsCommand}"
                            Background="{DynamicResource ButtonBackground}"
                            Foreground="{DynamicResource ButtonForeground}"
                            BorderBrush="{DynamicResource ButtonBorder}"
                            Padding="10,5"
                            Margin="0,0,5,0"/>
                    
                    <Button Content="{DynamicResource ExportCollections}" 
                            IsEnabled="False"
                            Background="{DynamicResource ButtonBackground}"
                            Foreground="{DynamicResource ButtonForeground}"
                            BorderBrush="{DynamicResource ButtonBorder}"
                            Padding="10,5"
                            ToolTip="今後実装予定"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <GridSplitter Margin="5,0" Grid.Column="1"/>
        
        <!-- インポートリスト -->
        <GroupBox Grid.Column="2" Header="{DynamicResource ImportList}" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- インポートリスト -->
                <ListBox Grid.Row="0"/>
                
                <!-- インポートリスト操作ボタン -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="{DynamicResource ImportCollections}" 
                            IsEnabled="False"
                            Background="{DynamicResource ButtonBackground}"
                            Foreground="{DynamicResource ButtonForeground}"
                            BorderBrush="{DynamicResource ButtonBorder}"
                            Padding="10,5"
                            ToolTip="今後実装予定"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>